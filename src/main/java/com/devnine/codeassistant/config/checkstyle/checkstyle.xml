<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "config/checkstyle/dtd/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">
        <!-- Naming conventions -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern" value="Class names should be in CamelCase."/>
        </module>
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern" value="Method names should start with a lowercase letter."/>
        </module>

        <!-- Other checks -->
        <module name="FinalClass"/>
        <module name="LineLength">
            <property name="max" value="120"/>
        </module>
    </module>
</module>
